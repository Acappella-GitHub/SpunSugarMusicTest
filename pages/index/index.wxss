.index {
  width: 100%;
  height: 100%;
}

@font-face {
  font-family: "iconfont";
  src: url("data:application/font-woff;base64,") format('woff');
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.song-info {
  box-sizing: border-box;
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  padding: 5px;
  height: 45px;
  overflow: hidden;
}

.song-name {
  width: 100%;
  overflow: hidden;
  font-size: 16px;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.singer, .platform {
  box-sizing: border-box;
  width: 50%;
  overflow: hidden;
  font-size: 12px;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.top-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 40px;
  box-shadow: 0 0 5px #AAA;
  /* background: #DDD; */
}

.icon-menu {
  margin-left: 5px;
  line-height: 40px;
}

.icon-menu:before {
  content: "\e791";
}

.search-bar {
  display: flex;
  align-items: center;
  width: 50%;
  height: 20px;
  border: 1px #AAA solid;
  border-radius: 5px;
  overflow: hidden;
}

.search-bar picker {
  width: 20%;
  height: 100%;
  background: #BBB;
  font-size: 12px;
  text-align: center;
  line-height: 20px;
  color: #555;
}

.search-bar input {
  padding: 0 5px;
  width: 80%;
  height: 20rpx;
  font-size: 12px;
}

.play-list-box {
  width: 100%;
  height: calc(100% - 145px);
}

.play-list-item {
  box-sizing: border-box;
  display: flex;
  width: 100%;
  height: 45px;
  box-shadow: 0 -1px 0 #DDD inset;
}

.sear, .del {
  width: 30px;
  height: 45px;
  text-align: center;
  line-height: 45px;
}

.player-box {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 60px;
  background: #666;
}

.progress-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 15px;
  overflow: hidden;
  background: #ccc;
}

.progress-bar text {
  font-size: 12px;
}

.progress-bar slider {
  margin: 0px;
  width: 70%;
}

.mini-cover {
  width: 45px;
  height: 45px;
}

.prev, .play, .next {
  width: 45px;
  height: 45px;
  text-align: center;
  line-height: 45px;
}

.tab-box {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 45px;
  background: #DDD;
}

.search, .history, .collection {
  width: 45px;
  height: 100%;
  font-size: 22px;
  text-align: center;
  line-height: 45px;
}

