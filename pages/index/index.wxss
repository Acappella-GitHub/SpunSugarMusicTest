.container {
  width: 100%;
  height: 100%;
}

.top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 40px;
  box-shadow: 0 0 5px #AAA;
  /* background: #DDD; */
}

.menu {
  margin-left: 5px;
  line-height: 40px;
}

.srch {
  display: flex;
  align-items: center;
  width: 50%;
  height: 20px;
}

.srch picker {
  padding: 1px 5px;
  height: 20px;
  background: #BBB;
  border: 1px #d0d0d0 solid;
  border-right: none;
  border-radius: 5px 0 0 5px;
  font-size: 12px;
  line-height: 20px;
  color: #555;
}

.srch input {
  margin: 0;
  padding: 0 5px;
  height: 20px;
  border: 1px #d0d0d0 solid;
  border-radius: 0 5px 5px 0;
  font-size: 12px;
}

.placeholder {
  margin: 0;
  padding: 0;
  height: 20px;
}

.play-list {
  width: 100%;
  height: calc(100% - 145px);
}

.item {
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  padding: 5px;
  width: 100%;
  height: 50px;
  box-shadow: 0 -1px 0 #DDD inset;
}

.song-name {
  width: 100%;
  font-size: 16px;
}

.singer, .album-name, .platform {
  padding: 0 13px 0 2px;
  font-size: 12px;
}

.select {
  position: absolute;
  right: 5px;
  width: 5%;
  text-align: center;
  line-height: 40px;
}

.console {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 60px;
  /* background: #666; */
}

.time {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 15px;
}

.timer, .total-time {
  font-size: 12px;
}

.play-bar {
  margin: 0px;
  width: 70%;
}

.mini-cover {
  width: 45px;
  height: 45px;
}

.song-info {
  width: calc(100% - 180px);
  height: 45px;
}

.prev, .play, .next {
  width: 45px;
  height: 45px;
  text-align: center;
  line-height: 45px;
}

.tab {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 45px;
  background: #DDD;
}

.search, .histories, .collection {
  width: 45px;
  height: 100%;
  font-size: 22px;
  text-align: center;
  line-height: 45px;
  
}

@font-face {
  font-family: "iconfont";
  src: url("data:application/font-woff;base64,") format('woff');
}

.iconfont {
  font-family:"iconfont" !important;
  font-size:16px;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

